<% if @posts.size == 0 %>
  <%= "<p>No messages</p>" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Title</th>
      <th>Update post</th>
      <th>Delete post</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post['id'] %></td>
      <td><%= post['post_title'] %></td>
      <td>update</td>
      <td>delete</td>
    </tr>
  <% end %>
  </tbody>

</table>